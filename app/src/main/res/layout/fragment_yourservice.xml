<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:background="@drawable/splash_gradiant_background"
    tools:context=".YourserviceFragment">







    <TextView
        android:id="@+id/txt_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_170sdp"
         android:src="@drawable/_9119019_arrows_around_wallet_with_money_3d_cartoon_style_icon__converted__1"
        app:layout_constraintBottom_toTopOf="@+id/layoout_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_skip" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoout_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/group_34059"
        android:paddingVertical="@dimen/_100sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <TextView
        android:id="@+id/No_Commission"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:gravity="center"
        android:padding="0dp"
        android:text="@string/home_screen1"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/appCompatButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/appCompatButton2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:background="@drawable/next_button"
            android:gravity="center"
            android:text="Next"
            android:layout_marginBottom="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="19dp"
            tools:layout_editor_absoluteY="187dp" />










</androidx.constraintlayout.widget.ConstraintLayout>